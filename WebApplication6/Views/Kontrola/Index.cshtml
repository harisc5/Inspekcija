@model  System.Data.DataTable
@{
    ViewBag.Title = "Index";
}
<h3>Pregled Kontrola</h3>
<table class="table table-bordered table-striped">
    <tr>
        <th>Datum</th>
        <th>Ime Tijela</th>
        <th>Ime Proizvoda</th>
        <th>Rezultat</th>
        <th>Sigurnost</th>
        <th>Proizvodjac</th>

    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>@Model.Rows[i][6]</td>
            <td>
                <a href="@Url.Action("Edit","Kontrola",new {@id=@Model.Rows[i][0]})">Edituj</a>
                <a href="@Url.Action("Delete","Kontrola",new {@id=@Model.Rows[i][0]})">Obriši</a>
            </td>

        </tr>
    }


</table>

<a href="@Url.Action("Create","Kontrola")">Dodaj Kontrolu</a>
<br />
<a href="@Url.Action("Index","Home")">Povratak na početnu</a>

