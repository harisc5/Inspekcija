@model  System.Data.DataTable
@{
    ViewBag.Title = "Proizvodi";
}

<h3>Pregled Proizvoda</h3>
<table class="table table-bordered table-striped">
    <tr>
        <th>Ime Proizvoda</th>
        <th>Proizvodjac</th>
        <th>Serijski broj</th>
        <th>Zemlja Porijekla</th>
        <th>Opis</th>

    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>
            <td>
                <a href="@Url.Action("Edit","Proizvod",new {@id=@Model.Rows[i][0]})">Edituj</a>
                <a href="@Url.Action("Delete","Proizvod",new {@id=@Model.Rows[i][0]})">Obriši</a>
            </td>

        </tr>
    }


</table>

<a href="@Url.Action("Create","Proizvod")">Dodaj Proizvod</a>
<br />
<a href="@Url.Action("Index","Home")">Povratak na početnu</a>

